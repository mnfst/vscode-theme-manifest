{
  "tokenColors": [
    {
      "settings": {
        "foreground": "#1c9c82"
      }
    },
    {
      "name": "Comment",
      "scope": "comment",
      "settings": {
        "foreground": "#6688cc"
      }
    },
    {
      "name": "String",
      "scope": "string",
      "settings": {
        "foreground": "#f7d7bc"
      }
    },
    {
      "name": "Number",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#ff9e9c"
      }
    },
    {
      "name": "Built-in constant",
      "scope": "constant.language",
      "settings": {
        "foreground": "#f280d0"
      }
    },
    {
      "name": "User-defined constant",
      "scope": ["constant.character", "constant.other"],
      "settings": {
        "foreground": "#f280d0"
      }
    },
    {
      "name": "Variable",
      "scope": "variable",
      "settings": {
        "foreground": "#a8efe0"
      }
    },
    {
      "name": "Keyword",
      "scope": "keyword",
      "settings": {
        "foreground": "#F2C79C"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "fontStyle": "",
        "foreground": "#F2C79C"
      }
    },
    {
      "name": "Storage type",
      "scope": "storage.type",
      "settings": {
        "foreground": "#f280d0"
      }
    },
    {
      "name": "Class name",
      "scope": ["entity.name.type.class", "support.class", "entity.name.class"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#82F0DD"
      }
    },
    {
      "name": "Inherited class",
      "scope": "entity.other.inherited-class",
      "settings": {
        "fontStyle": "italic underline",
        "foreground": "#ddbb88"
      }
    },
    {
      "name": "Function name",
      "scope": "entity.name.function",
      "settings": {
        "fontStyle": "",
        "foreground": "#2be1b7"
      }
    },
    {
      "name": "Function argument",
      "scope": "variable.parameter",
      "settings": {
        "fontStyle": "italic",
        "foreground": "#ffdedd"
      }
    },
    {
      "scope": "variable.language",
      "settings": {
        "foreground": "#fce6f3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Tag name",
      "scope": "entity.name.tag",
      "settings": {
        "fontStyle": "",
        "foreground": "#2be1b7"
      }
    },
    {
      "name": "Tag attribute",
      "scope": "entity.other.attribute-name",
      "settings": {
        "fontStyle": "",
        "foreground": "#ddbb88"
      }
    },
    {
      "name": "Library function",
      "scope": "support.function",
      "settings": {
        "fontStyle": "",
        "foreground": "#2be1b7"
      }
    },
    {
      "name": "Library constant",
      "scope": "support.constant",
      "settings": {
        "fontStyle": "",
        "foreground": "#e12bb0"
      }
    },
    {
      "name": "Library class/type",
      "scope": ["support.type", "support.class"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#a8efe0"
      }
    },
    {
      "name": "Library variable",
      "scope": "support.other.variable",
      "settings": {
        "fontStyle": ""
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid",
      "settings": {
        "fontStyle": "",
        "foreground": "#F8F8F0"
      }
    },
    {
      "name": "Invalid deprecated",
      "scope": "invalid.deprecated",
      "settings": {
        "fontStyle": "strikethrough",
        "foreground": "#F8F8F0"
      }
    }
  ],
  "colors": {
    "editor.background": "#1c1c24",
    "editorCursor.foreground": "#ddbb88",
    "editor.foreground": "#f2c79c",
    "editorWhitespace.foreground": "#1c1c24",
    "editor.lineHighlightBackground": "#1c1c24",
    "editor.selectionBackground": "#2430f0",
    "sideBar.background": "#1c1c24",
    "sideBar.foreground": "#ffffff",
    "editorLineNumber.foreground": "#6688cc", // Default line numbers color
    "editorLineNumber.activeForeground": "#d8ddfc", // Color of the active line number

    "sideBar.border": "#1c1c24", // Border color around the sidebar
    "sideBarSectionHeader.border": "#b2413f", // Border under section headers in the sidebar

    // Terminal Borders
    "terminal.border": "#1c1c24", // Border color around the terminal
    "panel.border": "#1c1c24" // Border separating terminal from editor area
  },
  "name": "Manifest"
}
